<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Adulthood -->
  <AlienRace.AlienBackstoryDef>
    <defName>MearghAdvisor</defName>
    <title>Advisor</title>
    <titleShort>Advisor</titleShort>
    <baseDesc>[PAWN_nameDef] choose to serve another Meargh. Therefore foregoing [PAWN_pronoun] rights to rule.</baseDesc>
    <bodyTypeMale>Female</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <skillGains>
      <li>
        <key>Shooting</key>
        <value>2</value>
      </li>
      <li>
        <key>Social</key>
        <value>3</value>
      </li>
      <li>
        <key>Plants</key>
        <value>2</value>
      </li>
      <li>
        <key>Medicine</key>
        <value>4</value>
      </li>
    </skillGains>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirMeargh</li>
    </spawnCategories>
  </AlienRace.AlienBackstoryDef>
  <AlienRace.AlienBackstoryDef>
    <defName>MearghHermit</defName>
    <title>Hermit</title>
    <titleShort>Hermit</titleShort>
    <baseDesc>[PAWN_nameDef] tends to spend alot of time away from the common rabble of the clan, studiyng various things.</baseDesc>
    <bodyTypeMale>Female</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <skillGains>
      <li>
        <key>Shooting</key>
        <value>5</value>
      </li>
      <li>
        <key>Intellectual</key>
        <value>3</value>
      </li>
      <li>
        <key>Plants</key>
        <value>5</value>
      </li>
      <li>
        <key>Medicine</key>
        <value>5</value>
      </li>
    </skillGains>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirMeargh</li>
      <li>FimirMearghLeader</li>
    </spawnCategories>
  </AlienRace.AlienBackstoryDef>
  <AlienRace.AlienBackstoryDef>
    <defName>MearghWarrior</defName>
    <title>Warrior</title>
    <titleShort>Warrior</titleShort>
    <baseDesc>[PAWN_nameDef] likes to join the fray of the raids proving [PAWN_possessive] strength.</baseDesc>
    <bodyTypeMale>Female</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <skillGains>
      <li>
        <key>Melee</key>
        <value>8</value>
      </li>
      <li>
        <key>Shooting</key>
        <value>8</value>
      </li>
    </skillGains>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirMeargh</li>
      <li>FimirMearghLeader</li>
    </spawnCategories>
  </AlienRace.AlienBackstoryDef>
  <AlienRace.AlienBackstoryDef>
    <defName>MearghLeader</defName>
    <title>Charismatic</title>
    <titleShort>Charismatic</titleShort>
    <baseDesc>[PAWN_nameDef] is charismatic and devious. Even other races find a certain charm in [PAWN_objective].</baseDesc>
    <bodyTypeMale>Female</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <skillGains>
      <li>
        <key>Social</key>
        <value>7</value>
      </li>
      <li>
        <key>Intellectual</key>
        <value>4</value>
      </li>
    </skillGains>
    <slot>Adulthood</slot>
    <spawnCategories>
      <li>FimirMeargh</li>
      <li>FimirMearghLeader</li>
    </spawnCategories>
  </AlienRace.AlienBackstoryDef>
  <!-- Childhood -->
  <AlienRace.AlienBackstoryDef>
    <defName>FimirChildMeargh</defName>
    <title>Meargh caste</title>
    <titleShort>Meargh</titleShort>
    <baseDesc>Born as a rarity [PAWN_nameDef], a female Fimir. The highest caste of them all, born to rule or die competing for it.</baseDesc>
    <bodyTypeMale>Female</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <slot>Childhood</slot>
    <skillGains>
      <li>
        <key>Plants</key>
        <value>2</value>
      </li>
      <li>
        <key>Intellectual</key>
        <value>3</value>
      </li>
      <li>
        <key>Medicine</key>
        <value>3</value>
      </li>
      <li>
        <key>Shooting</key>
        <value>5</value>
      </li>
    </skillGains>
    <workDisables>
      <li>Mining</li>
      <li>ManualDumb</li>
    </workDisables>
    <spawnCategories>
      <li>FimirMeargh</li>
      <li>FimirMearghLeader</li>
    </spawnCategories>
  </AlienRace.AlienBackstoryDef>
